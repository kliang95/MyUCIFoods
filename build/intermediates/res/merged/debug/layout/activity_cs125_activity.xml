<TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section_label"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Select options to narrow down your food search."/>

<RadioButton
android:id="@+id/radioButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_below="@+id/section_label"
android:layout_marginTop="29dp"
android:text="Time" />

<CheckBox
android:id="@+id/breakfast"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_below="@+id/radioButton"
android:layout_marginLeft="44dp"
android:layout_marginStart="44dp"
android:text="Breakfast" />

<CheckBox
android:id="@+id/lunch"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/breakfast"
android:layout_alignStart="@+id/breakfast"
android:layout_below="@+id/breakfast"
android:text="Lunch" />

<CheckBox
android:id="@+id/dinner"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/lunch"
android:layout_alignStart="@+id/lunch"
android:layout_below="@+id/lunch"
android:text="Dinner" />

<CheckBox
android:id="@+id/snack"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Snack"
android:layout_below="@+id/dinner"
android:layout_alignRight="@+id/lunch"
android:layout_alignEnd="@+id/lunch" />

<RadioButton
android:id="@+id/radioButton2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Cuisine"
android:layout_below="@+id/snack"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true" />

<CheckBox
android:id="@+id/american"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/snack"
android:layout_alignStart="@+id/snack"
android:layout_below="@+id/radioButton2"
android:text="American" />

<CheckBox
android:id="@+id/asian"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/american"
android:layout_alignStart="@+id/american"
android:layout_below="@+id/american"
android:text="Asian" />

<CheckBox
android:id="@+id/mexican"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/dinner"
android:layout_alignStart="@+id/dinner"
android:layout_below="@+id/asian"
android:text="Mexican" />

<RadioButton
android:id="@+id/radioButton3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Food"
android:layout_below="@+id/mexican"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true" />

<CheckBox
android:id="@+id/drinks"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/mexican"
android:layout_alignStart="@+id/mexican"
android:layout_below="@+id/radioButton3"
android:text="Drinks" />

<CheckBox
android:id="@+id/food"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/drinks"
android:layout_alignStart="@+id/drinks"
android:layout_below="@+id/drinks"
android:text="Food" />

<CheckBox
android:id="@+id/snacks"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignLeft="@+id/food"
android:layout_alignStart="@+id/food"
android:layout_below="@+id/food"
android:text="Snacks" />

<Button
android:id="@+id/btn_search"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/btn_search"
android:layout_below="@+id/snacks"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"/>

</RelativeLayout>
